generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_REMOTE_URL")
}

model Song {
  id          Int       @id @default(autoincrement())
  name        String
  by          String?
  note        String?
  sheet_url   String?
  audio_url   String?
  songlist_id Int?
  Songlist    Songlist? @relation(fields: [songlist_id], references: [id])
}

model Songlist {
  id    Int       @id @default(autoincrement())
  name  String?
  date  DateTime?
  songs Song[]
}
